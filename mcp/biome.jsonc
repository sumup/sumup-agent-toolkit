{
  "$schema": "https://biomejs.dev/schemas/2.0.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "includes": ["**", "!**/.rslib"]
  },
  "javascript": {
    "formatter": {
      "quoteProperties": "preserve",
      "quoteStyle": "double"
    }
  },
  "overrides": [
    {
      "includes": ["**/package.json", "**/jsr.json"],
      "formatter": {
        "lineWidth": 1,
        "indentStyle": "space"
      }
    }
  ]
}
