{
	"$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
	"include-component-in-tag": true,
	"draft": true,
	"extra-label": "release",
  "pull-request-title-pattern": "release: ${version}",
	"packages": {
		"mcp": {
			"release-type": "node",
			"component": "mcp"
		},
		"typescript": {
			"release-type": "node",
			"component": "typescript",
			"extra-files": [
				"src/common/const.ts",
        {
          "type": "json",
          "path": "jsr.json",
          "jsonpath": "$.version"
        }
			]
		}
	}
}
